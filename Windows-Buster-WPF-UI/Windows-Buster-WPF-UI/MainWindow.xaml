<Window x:Class="Windows_Buster_WPF_UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Windows_Buster_WPF_UI"
        mc:Ignorable="d"
        Title="Windows-Buster-PLCS" Height="500" Width="500">
    <Grid>
        <TabControl>
            <TabItem Header="Build-PS">
                <WrapPanel>
                    <Button x:Name="buildPSButton" Width="164" Height="20" Click="buildPSButton_Click">Build Power Shell</Button>
                    <Button x:Name="previewPSButton" Width="164" Height="20" Click="previewPSButton_Click">Preview Power Shell</Button>
                    <Button x:Name="resetPSOptionsButton" Width="166" Height="20" Click="resetPSOptionsButton_Click">Reset Options</Button>
                    <Label FontWeight="Bold">PS-File-Options:</Label>
                </WrapPanel>
        </TabItem>
        <TabItem Header="Windows Vuln Suggester">
            <WrapPanel>
            </WrapPanel>
        </TabItem>
        <TabItem Header="PowerShell History">
            <WrapPanel>
            </WrapPanel>
        </TabItem>
        </TabControl>
    </Grid>
</Window>
